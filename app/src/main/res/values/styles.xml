<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">@color/grey_400</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.profile_fio">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.clickable">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue_300</item>
    </style>


    <style name="Text.Card">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginVertical">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>